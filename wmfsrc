[misc]
	font                  = "arial:bold:size=10" 
	raisefocus            = true
	#raiseswitch           = false	# DEPRECATED?
	focus_follow_mouse    = true
	focus_follow_movement = false
	opacity               = 255

	# focus_pointer_click: click on unfocused client area:
	# true  -- default, set focus
	# false -- click go to client; including dockapps
	focus_pointer_click   = true
	status_timing         = 5     #seconds
	#status_path           = "~/.config/wmfs/status.sh"
[/misc]

[bar]
	fg     = "#777777"
	bg     = "#222222"
	border = false
	#height = "-1"

	light_shade =  0.10
	dark_shade  = -0.10

	[systray]
		# Enable/disable systray
		active = true

		# Screen of systray
		screen = 5

		# Spacing between tray icons
		spacing = 2
	[/systray]

	# Remove this section to disable the selbar.
	[selbar]
		fg = "#ffffff"
		bg = "#222222"

		# Cut title length
		max_length = 30

		[mouse] button = "1" func = "client_next" [/mouse]
		[mouse] button = "2" func = "client_kill" [/mouse]
		[mouse] button = "3" func = "clientlist"  [/mouse]
		[mouse] button = "4" func = "client_next" [/mouse]
		[mouse] button = "5" func = "client_prev" [/mouse]
	[/selbar]

[/bar]

[layouts]
	fg = "#ffffff"
	bg = "#222222"

	# Border around the layout button.
	border = true

	# Value menu or switch.
